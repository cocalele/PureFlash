CXX = g++
#CXXFLAGS = -Wall -ansi -pedantic -Wno-variadic-macros -g -I../include -DDEBUG -L../ -lpthread -ls5common
CXXFLAGS = -Wall -g -I../include -DDEBUG  -lpthread -ls5common -llog4c
ifeq ($(shell uname),SunOS)
  LIBS = -lsocket -lnsl
endif

all: clt srv

clt: clt_socket.c
	$(CXX) $(CXXFLAGS) -o clt clt_socket.c $(LIBS)

srv: srv_socket.c
	$(CXX) $(CXXFLAGS) -o srv srv_socket.c $(LIBS)

clean:
	$(RM) clt  srv
